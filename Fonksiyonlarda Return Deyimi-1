#include<stdio.h>
 // sayıların toplanmasını bi fonksiyon yardımı ile yapacağız
 int topla(int sayi1,int sayi2){
 	
 	//return, dış dünyaya dönüş yapar yani çıktı verir
 	return (sayi1+ sayi2);
 	
 }
 
 int main() {
 	
 	int sayi1;
 	int sayi2;
 	
 	scanf("%d %d",&sayi1,&sayi2);
 	
 	printf("Sonuc: %d", topla(sayi1,sayi2));
 	
 	return 0;
 }

sonuç:
4
6
Sonuc: 10
--------------------------------
