#include<stdio.h>
 int topla(int sayi1,int sayi2){
 	
 	return (sayi1+ sayi2);
 	
 }
 
 int main() {
 	
 	int sayi1;
 	int sayi2;
 	int toplam; //!
 	
 	scanf("%d %d",&sayi1,&sayi2);
 	toplam= topla(sayi1, sayi2);
 	
 	printf("Sonuc: %d", toplam );
 	
 	return 0;
 }
