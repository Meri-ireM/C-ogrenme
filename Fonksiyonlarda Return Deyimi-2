#include<stdio.h>
 //sayının faktöriyelini fonksiyon yardımı ile bulma
 
 int faktoriyel(int sayi){
 	
 	int fakt= 1;
 	for(; sayi>0; sayi--){
 	
	 	fakt*= sayi;
 		

	 }
	 
	 return fakt;
 }
 
 
 int main(){
 	
 	int n;
 	
 	printf("Faktoriyelini istediginiz sayiyi giriniz: ");
 	
 	scanf("%d",&n);
 	
 	printf("Faktoriyel: %d", faktoriyel(n));
 	
 }
sonuç:
Faktoriyelini istediginiz sayiyi giriniz: 5
Faktoriyel: 120
