#include <stdio.h>
int main() {
	
	char isim[20];
	
	printf("Isminizi giriniz:");
	
	scanf("%s",isim); //Karakter dizinlerinde "&" kullanmıyoruz
	
	printf("Isminiz: %s",isim);
	
	return 0;
}
