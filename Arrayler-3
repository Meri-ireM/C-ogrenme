#include <stdio.h>
int main() {
	
	//kullanıcıdan 5 tane sayı isteyeceğiz ve bu sayıların aritmetik ort. alacağız
	 
	 int i;
	 float toplam= 0.0;
	 
	 float sayilar[5]; //5 tane değer alabilecek
	 for (i= 0; i< 5; i++) {
	 	
	 	printf("Bir sayi giriniz: ");
		 scanf("%f",&sayilar[i]); 
		 
	 }
	 
	 for (i= 0; i<5; i++) {
	 	toplam += sayilar[i];
	 }
	
	printf("Girdiginiz sayilarin aritmetik ortalamasi %.2f dir",toplam/ 5);
	
	return 0;
}
