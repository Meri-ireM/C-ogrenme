#include <stdio.h>

int main() {
	
	int toplam= 0;
	int i;
	int sayi;
	
	//kullanıcı istediği kadar sayı girecek ve kullanıcı çıkmak istediğinde bu sayılar toplanıp basılacak
	
	for(i= 0; true; i++){
		printf("Sayiyi giriniz (Cikmak icin -1 basin) :\n");
		scanf("%d",&sayi);
		
		if(sayi== -1) {
			break;
			
		}
		
		toplam+= sayi;
		
	}
		
		printf("\n %d",toplam);
		
		return 0;

